<h1>Editing book</h1>

<%= form_for(@book) do |f| %>
  <div class="new">
    <P>Title</P>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>
    <p><%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %></p>
  </div>
<% end %>
